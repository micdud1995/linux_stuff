# fileI - file Input (read from file)
snippet fileI
	const char *path="${1:path}";
	ifstream fileIn;
	fileIn.open(path, ios_base::in);

	if(fileIn.is_open())
	{
		string line;
		while (getline(fileIn, line)) 
		{
		   cout << line << endl; 
		}

		fileIn.close();
	}

