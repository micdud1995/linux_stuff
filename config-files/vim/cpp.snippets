## MY FUNCTIONS
# Move array left
snippet movearrayleft
	void moveArrayLeft(int *tab, const int SIZE, int positions)
	{
		for (positions; positions > 0; --positions) 
		{
			int tmp = tab[0];

			for (short i = 0; i < SIZE-1; ++i) 
			{
				tab[i] = tab[i+1];
			}

			tab[SIZE-1] = tmp;
		}
	}
# Move array right
snippet movearrayright
	void moveArrayRight(int *tab, const int SIZE, int positions)
	{
		for (positions; positions > 0; --positions) 
		{
			int tmp = tab[SIZE-1];

			for (short i = SIZE-1; i > 0; --i) 
			{
				tab[i] = tab[i-1];
			}

			tab[0] = tmp;
		}
	}

