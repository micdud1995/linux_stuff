# touchpad
synclient TapButton1=1

# polish letters
vim /etc/locale.gen (uncomment pl files)
locale-gen
vim /etc/locale.conf
	add: LANG=pl_PL.UTF-8

# wifi
Add a "non-free" component to /etc/apt/sources.list
aptitude update
aptitude install linux-headers-$(uname -r|sed 's,[^-]*-[^-]*-,,') broadcom-sta-dkms
modprobe -r b44 b43 b43legacy ssb brcmsmac
modprobe wl
aptitude update
aptitude install wicd
Amend /etc/network/interfaces to contain only the following:
	auto lo
	iface lo inet loopback
adduser yourusername netdev
/etc/init.d/dbus reload
/etc/init.d/wicd start
exit
wicd-client -n

# skype
http://www.skype.com/en/download-skype/skype-for-computer/
dpkg --add-architecture i386
dpkg -i skype.deb

# microphone
vim /etc/modprobe.d/alsa-base.conf
type: options snd-hda-intel model=auto

# rtorrent
aptitude install rtorrent
mkdir ~/.session
skopiuj rtorrent.rc do domowego i dodaj kropkę na początku
ctrl+d - pauza
ctrl+d x2 - zatrzymanie ściągania, usunięcie pliku .torrent
ctrl+s - wznowienie pobierania

# grub	
sudo vim /etc/default/grub
update-grub

# automatic login
vim /etc/slim.conf
default_user      michal
auto_login        yes

# beep sound
alsamixer
press F6 and choose sound card
mute beep
Esc

# packages
gmtp feh ufw xfce4-screenshooter xfce4-appfinder leafpad brasero terminator gimp slim mc moc conky vim chromium tint2 git steam tree htop gummi geeqie vlc alsa-utils
